@model IEnumerable<Sedc.Todo.WebApp.Models.Todo>;
@{
    ViewData["Title"] = "Index";
}

<h2>Todo list</h2>
<span>Total todos: @Model.Count()</span>
@if (DateTime.Now.Date == new DateTime(day: 11, month: 6, year: 2019))
{
    <h4>Today is Kamehameha day! Close this application and enjoy your day off!</h4>
}
else
{
    <ul>
        @foreach (var todo in Model)
        {
            <li>
                <div>
                    <span>Title:&nbsp;</span>
                    <span>@todo.Title</span>
                </div>
                <div>
                    <span>Description:&nbsp;</span>
                    <span>@todo.Description</span>
                </div>
                <div>
                    <span>Due date:&nbsp;</span>
                    <span>@todo.DueDate</span>
                </div>
            </li>
        }
    </ul>
}
<div>
    <a asp-controller="Todo" asp-action="Index" class="btn btn-primary">All</a>
    <a asp-controller="Todo" asp-action="Yesterday" class="btn btn-primary">Yesterday</a>
    <a asp-controller="Todo" asp-action="Today" class="btn btn-primary">Today</a>
    <a asp-controller="Todo" asp-action="Tomorrow" class="btn btn-primary">Tomorrow</a>
</div>